<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_learn_english"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_learn_english_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnEnglish"
        tools:targetApi="31">
        <activity
            android:name=".ui.main.web.QuizActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.web.BookActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnEnglish" />
        <activity
            android:name=".ui.main.web.VideoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.grammar.IrregularVerbsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.grammar.InfoTensesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.vocabulary.DictionaryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.grammar.PartsOfSpeechActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.grammar.PunctuationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.grammar.TensesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.grammar.SentenceStructureActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.LogActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.SignActivity"
            android:exported="false" />
        <activity
            android:name=".ui.registration.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>